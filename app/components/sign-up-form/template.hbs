{{email-input email=credentials.email}}
{{password-input password=credentials.password}}
{{password-confirmation-input password=credentials.passwordConfirmation}}

<button type="submit" class="btn btn-primary full-size-buttons" {{action "submit"}}>
  Sign Up
</button>

<button class="btn btn-default full-size-buttons" {{action "reset"}}>
  Cancel
</button>
